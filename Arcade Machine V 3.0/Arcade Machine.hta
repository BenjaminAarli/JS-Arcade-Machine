<style>
body {
 background-color: #29202B;
 background-image: url("Images/BG/BG_Solair.gif");
 background-repeat: no-repeat;
 background-attachment: fixed;
 background-position: center; 
}
.buttonForGBA{
	background-image: url("Images/GBA/GBA Logo Fixed2.png");
	background-size: contain; 
	background-color: lavender;
	background-repeat: no-repeat;
    background-attachment: absolute;
	background-position: center; 
	border: 3px black;
	text-align: left;
	font-size: 16px;
	color: black;
	width: 300px; 
	height: 50px; 
	border-collapse: separate;
    border: 1px solid black;
    margin: 4px;
    box-shadow: 5px 5px 5px #ff0000;
}
</style> 
<script>
var divID; // for hideDiv(Div ID). 
var bgNum = getRandomNumber(); // Generates a random number for the random background image. 

// Function for hiding and showing a div.   
function hideDiv(divID){
var gameList; 
	gameList = document.getElementById(divID);
if (gameList.style.display == 'block') {gameList.style.display = 'none'} 
else if (gameList.style.display == 'none') {gameList.style.display = 'block'}
else {alert("Function hideDIV failed!")};
};
// Generates a (semi-random) number for the background images. It changes them acordingly. 
function getRandomNumber(){
var randNum = Math.floor(Math.random() * 3)
return randNum;
};

// The Background Image Changer. Does what it's advertised. 
function changeBG(){
++bgNum;
if 		(bgNum == 1) {document.body.style.backgroundImage = 'url("Images/BG/BG_Firelink.gif")';}
else if (bgNum == 2) {document.body.style.backgroundImage = 'url("Images/BG/BG_DarkSoulsCave.gif")';}
else if (bgNum == 3) {document.body.style.backgroundImage = 'url("Images/BG/BG_Solair.gif")';}
else {bgNum = 0}
};

function startup(){
 changeBG();
}
</script> 

